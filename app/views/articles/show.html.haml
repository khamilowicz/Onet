%p#notice= notice

.row
  .span3
    %p
      =render partial:'articletitle', collection: @articletitle
  .span6
    %p
      %h3= "Author: #{@article.editor.username}"

    %p
      %h2=@article.title
    %p
      =image_tag @article.image_path unless @article.image_path.nil?

    %p
      =@article.content

    %p= render 'comments/new', article_id: @article.id
    %p
      %b Comments:
      = render @article.comments

  = link_to 'Edit', edit_article_path(@article)
  \|
  = link_to 'Back', articles_path
  .span3
    %p
      -@article.categories.each do |cat|
        = link_to cat.name, category_path(cat)
